<div id="ticket_area">
	<h4>Dina tickets</h4>
	<% @tickets.each do |ticket| %>
		<h5>
			<%= link_to ticket.title, ticket_path(ticket.id), :class=> "manage_ticket_link" %>
			<%= button_to "Radera", ticket, :method=>:delete, :class=> "btn remove_button", :confirm=>"Are you sure?" %>
			<%= link_to "Redigera", edit_ticket_path(ticket), :class=> "btn edit_button" %>
			<br/>
		</h5>
	<% end %><br/>

	<h4>Tickets som tillhör projekt du äger</h4>
	<% @tickets_for_owned_projects.each do |ticket| %>
		<h5>
			<%= link_to ticket.title, ticket_path(ticket.id), :class=> "manage_ticket_link" %>
			<div class="ticket_project_name">(<%= Project.find(ticket.project_id).title %>)</div>
			<%= button_to "Radera", ticket, :method=>:delete, :class=> "btn remove_button", :confirm=>"Are you sure?" %>
			<%= link_to "Redigera", edit_ticket_path(ticket), :class=> "btn edit_button" %>
			<br/>
		</h5>
	<% end %>
</div>