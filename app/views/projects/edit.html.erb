<h1>Ändra projekt</h1>

<%= form_for @project do |f| %>
	<div class="alert alert-block">  
		<%= f.error_messages %>
	</div>
	<div class="text_field">
		<%= f.label :title%>
		<%= f.text_field :title%>
	</div>
	<div class="text_field">
		<%= f.label :description%>
		<%= f.text_field :description%>
	</div>
	<div class="dropdown">
		<%= f.label :start_date%>
		<%= f.date_select :start_date %>
	</div>
	<div class="dropdown">
		<%= f.label :end_date%>
		<%= f.date_select :end_date %>
	</div><br/>
	<span class="help-block">Välj användare som ska ingå ingå i projektet.</span>
	<div class="checkbox">
		<% @users.each do |user| %>
	    	<% should_be_checked = @project.users.include?(user) %>
			<%= check_box_tag "project[user_ids][]", user.id, should_be_checked, :id => "user_#{user.id}" %>
	    	<%= label_tag "user_#{user.id}", user.first_name + ' ' + user.last_name, :class => "checkbox" %>
		<% end %>
	</div>
</div>
	<div class="submit">
		<%= f.submit "Spara" %>
	</div>
<% end %>