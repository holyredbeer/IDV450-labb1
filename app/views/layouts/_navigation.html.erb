<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </a>

  <!-- Your site name for the upper left corner of the site -->
  <a class="brand">AMPTA</a>

  <!-- Start of the nav bar content -->
  <div class="nav-collapse"><!-- Other nav bar content -->
  <ul class="nav">
    <li class="active"><%= link_to 'Start', root_url %></li>
    <li><%= link_to 'Projekt', projects_url %></li>
      <% if signed_in? %>
        <li><%= link_to "Skapa projekt", new_project_path %>
      <% end %>
  </ul>

    <!-- The drop down menu -->
    <ul class="nav pull-right">
      <li class="divider-vertical"></li>
      <li class="dropdown">
        <% if signed_in? %>
          <a class="dropdown-toggle" href="#" data-toggle="dropdown">Inloggad som: <strong><%= current_user.first_name %> </strong><strong class="caret"></strong></a>
          <div class="dropdown-menu account_dropdown">
            <%= link_to "Visa tickets", tickets_path%><br/>
            <%= link_to "Hantera projekt", manage_projects_path %><br/>
            <%= link_to "Logga ut", signout_path, method: "delete"%>
        <% else %>
          <a class="dropdown-toggle" href="#" data-toggle="dropdown">Logga in <strong class="caret"></strong></a>
          <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
            <%= form_for(:session, url: sessions_path) do |f| %>

              <%= f.label :email %>
              <%= f.text_field(:email, :size => 30, :class => 'login_field', :placeholder => 'Användarnamn')%>

              <%= f.label :password %>
              <%= f.password_field(:password, :size => 30, :class => 'login_field', :placeholder => 'Lösenord')%>

              <%= f.submit "Logga in", :class => 'login_submit btn btn-primary' %>
            <% end %>
        <% end %>
        </div>
      </li>
    </ul>
  </div>